{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "types": ["vitest/globals", "vite/client", "@types/jest"],
    "outDir": "./dist",  // or "./out" depending on what you prefer
    "rootDir": "./src",  // the root directory of your TypeScript files
  },
  "references": [{ "path": "./tsconfig.node.json" }]
}
